<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/round_outline_background_itemhome_category"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgview_item_home_categories"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_23sdp"
            android:src="@mipmap/ic_launcher"></ImageView>
        <TextView
            android:id="@+id/txt_title_item_home_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="title"
            android:textColor="@color/white"
            android:layout_gravity="center"></TextView>
        <TextView
            android:id="@+id/txt_subtitle_item_home_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_21sdp"
            android:text="sub title"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textColor="@color/white"></TextView>
    </LinearLayout>

</RelativeLayout>