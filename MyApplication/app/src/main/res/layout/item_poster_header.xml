<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_255sdp"
    android:background="@drawable/background_item_poster_header">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/relativelayout_item_poster"
        android:layout_marginBottom="@dimen/_32sdp">

        <TextView
            android:id="@+id/txt_title_item_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/txt_subtitle_item_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtitle"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_title_item_poster"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/relativelayout_item_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_26sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_schedule_item_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_action_menu"
                android:textColor="@color/white"
                android:text="Đặt lịch"
                android:textSize="12dp"
                android:layout_toLeftOf="@id/btn_play_item_poster"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/btn_play_item_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_action_notifications"
                android:background="@android:color/transparent"
                android:text="Mở phim"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                />
            <Button
                android:id="@+id/btn_info_item_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_action_menu"
                android:background="@android:color/transparent"
                android:text="Thông tin"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_toRightOf="@id/btn_play_item_poster"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>